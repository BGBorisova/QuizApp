<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeScreenFragment">

    <fragment
        android:id="@+id/welcomeScreenFragment"
        android:name="com.example.quizapp.fragment.WelcomeScreenFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_welcome_screen">

        <action
            android:id="@+id/action_WelcomeScreenFragment_to_MainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.quizapp.fragment.MainScreenFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_main_screen">

        <action
            android:id="@+id/action_MainScreenFragment_to_WelcomeScreenFragment"
            app:destination="@id/welcomeScreenFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_eightClassScreenFragment"
            app:destination="@id/eightClassScreenFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_ninthClassScreenFragment"
            app:destination="@id/ninthClassScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/eightClassScreenFragment"
        android:name="com.example.quizapp.fragment.EightClassExamFragment"
        android:label="8 клас"
        tools:layout="@layout/fragment_eight_class_exam">

    </fragment>

    <fragment
        android:id="@+id/ninthClassScreenFragment"
        android:name="com.example.quizapp.fragment.NinthClassExamFragment"
        android:label="9 клас"
        tools:layout="@layout/fragment_ninth_class_exam">

    </fragment>

</navigation>